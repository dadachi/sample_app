<%= render :partial => 'menu' %>

<% if @direct_messages %>
  <table class="microposts">
    <% @direct_messages.each do |dm| %>
      <tr>
        <td class="gravatar">
          <%= link_to gravatar_for(dm.recipient), dm.recipient %>
        </td>
        <td class="micropost">
          <span class="user">
            <%= link_to dm.recipient.username, dm.recipient %>
          </span>
          <span class="content"><%= dm.content %></span>
          <span class="timestamp">
            Posted <%= time_ago_in_words(dm.created_at) %> ago.
          </span>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>
